<ParserConfiguration xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:noNamespaceSchemaLocation='../schema/Parser.xsd'>

    <Parser token="," comment="#" recovery="0" flush="false">
        <FixedLenghtRecordType>
            <StringFieldType trim="true">
                <PreProcessor>
                    <SubstringPreProcessor start="0" end="4"/>
                </PreProcessor>
                <Validator>
                    <NotNullValidator/>
                </Validator>
            </StringFieldType>
            <DateFieldType name="date" inputFormat="yyyyMMdd" outputFormat="dd/MM/yyyy">
                <PreProcessor>
                    <SubstringPreProcessor start="5"/>
                </PreProcessor>
            </DateFieldType>
            <TimestampFieldType isJavaTimestamp="false" outputFormat="dd/MM/yyyy">
                <PreProcessor>
                    <SubstringPreProcessor start="3"/>
                </PreProcessor>
            </TimestampFieldType>
            <StringFieldType trim="true">
                <PreProcessor>
                    <TrimPreProcessor trimLeading="x " trimTrailing="y "/>
                </PreProcessor>
            </StringFieldType>
        </FixedLenghtRecordType>
    </Parser>

</ParserConfiguration>

